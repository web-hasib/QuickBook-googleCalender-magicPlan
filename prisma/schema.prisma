datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  title     String
  content   String?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  fullName     String
  email   String @unique
  published Boolean  @default(false)
  createdAt DateTime @default(now())
}